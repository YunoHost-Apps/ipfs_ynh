{
    "name": "IPFS",
    "id": "ipfs",
    "packaging_format": 1,
    "description": {
        "en": "ipfs package for YunoHost.",
        "fr": "ipfs pour YunoHost."
    },
    "version": "0.4.23",
    "url": "https://github.com/ipfs/go-ipfs",
    "license": "MIT/Apache-2.0",
    "maintainer": {
        "name": "liberodark",
        "email": "liberodark@gmail.com"
    },
    "requirements": {
        "yunohost": ">= 2.7.2"
    },
    "multi_instance": false,
    "services": [
        "nginx",
        "php5-fpm",
        "mysql"
    ],
    "arguments": {
        "install": [{
                "name": "domain",
                "type": "domain",
                "ask": {
                    "en": "Choose a domain name for ipfs",
                    "fr": "Choisissez un nom de domaine pour ipfs"
                },
                "example": "example.com"
            },

            {
                "name": "path",
                "type": "path",
                "ask": {
                    "en": "Choose a path for ipfs /ipfs is accepted",
                    "fr": "Choisissez un chemin pour ipfs /ipfs est accept√©"
                },
                "example": "/ipfs",
                "default": "/ipfs"
            },
            
            {
                "name": "is_public",
                "type": "boolean",
                "ask": {
                    "en": "Is it a public site ?",
                    "fr": "Est-ce un site public ?"
                },
                "default": "false"
            }
        ]
    }
}
